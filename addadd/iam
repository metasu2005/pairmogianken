data "aws_iam_policy_document" "dynamodb_query" {
  statement {
    effect = "Allow"
    actions = [
      "dynamodb:Query",
      "dynamodb:GetItem",
      "dynamodb:BatchGetItem",
      "dynamodb:DescribeTable"
    ]
    resources = [
      "arn:aws:dynamodb:ap-northeast-1:${data.aws_caller_identity.current.account_id}:table/adv02_dev_iot",
      "arn:aws:dynamodb:ap-northeast-1:${data.aws_caller_identity.current.account_id}:table/adv02_dev_iot/index/*"
    ]
  }
}

resource "aws_iam_policy" "dynamodb_query" {
  name   = "adv02-dev-dynamodb-query"
  policy = data.aws_iam_policy_document.dynamodb_query.json
}

resource "aws_iam_role_policy_attachment" "attach_dynamodb_query" {
  role       = aws_iam_role.task_role.name   # ← タスク実行時ロール（executionではなく「task role」）
  policy_arn = aws_iam_policy.dynamodb_query.arn
}
